{
  "name": "Alpha Attendance Client",
  "description": "Alpha systems inc. の勤怠管理システムと alpha-attendance-api を連携させるクライアントです。",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage",
    "http://*/alpha/*",
    "https://*/alpha/*"
  ],
  "icons": {
    "16": "icon/alpha16.png",
    "48": "icon/alpha48.png"
  },
  "content_scripts": [
    {
      "matches": ["https://wg.alpha.co.jp/proxy/https/kinpo.alpha.co.jp/*"],
      "run_at": "document_end",
      "js": ["js/common-content.js"]
    },
    {
      "matches": ["https://wg.alpha.co.jp/proxy/https/kinpo.alpha.co.jp/kinmu/login/*"],
      "run_at": "document_idle",
      "css": ["css/attendance.css"],
      "js": ["js/login-content.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "icon/alpha16.png",
    "default_title": "Alpha Attendance Client",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "web_accessible_resources": [
    "status-window.html"
  ]
}